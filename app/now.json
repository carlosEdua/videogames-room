{
	"version": 2,
	"name": "masplay-web",
	"env": {
		"DEV": "production",
		"PORT": "5000",
		"OFFLINE_PORT": "27017",
		"DB_NAME": "masplay",
		"CLUSTER_NAME": "curso-de-platzi",
		"OFFLINE_DBNAME": "masplay",
		"OFFLINE_HOST": "localhost",
		"SECRET": "@secret_jwt",
		"DB_PASSWORD": "@atlas_password",
		"DB_USER": "carlos" 
	},
	"builds": [
		{ "src": "dist/**", "use": "@now/static" },
		{ "src": "public/**", "use": "@now/static" },
        	{ "src": "index.js", "use": "@now/node" }
	]
	"routes": [
    {
      "src": "/public/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/dist/(.*)",
	"dest": "/static-dist/$1"
    }
  ]
  	
	
}
